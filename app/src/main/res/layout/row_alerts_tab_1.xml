<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/row_alertsTab1">


    <TextView
        android:id="@+id/row_alertsTab1_updatedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posted:"
        android:textSize="12sp"
        android:layout_below="@+id/row_alertsTab1_deleteButton"
        android:layout_alignEnd="@+id/row_alertsTab1_deleteButton" />


    <TextView
        android:id="@+id/row_alertsTab1_alertBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Alert Body"
        android:textSize="19sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/row_alertsTab1_deleteButton"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/row_alertsTab1_deleteButton" />

    <ImageButton
        android:id="@+id/row_alertsTab1_deleteButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@mipmap/ic_chevron_right_black_48dp"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/row_alertsTab1_chatMessageBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Chat message Body"
        android:textSize="17sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@android:color/darker_gray"
        android:layout_alignBottom="@+id/row_alertsTab1_updatedAt"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/row_alertsTab1_alertBody" />

    <TextView
        android:id="@+id/row_alertsTab1_originalPostBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Original Post Body"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@android:color/darker_gray"
        android:layout_below="@+id/row_alertsTab1_chatMessageBody"
        android:layout_alignEnd="@+id/row_alertsTab1_postedAt"
        android:layout_alignParentStart="true" />


</RelativeLayout>